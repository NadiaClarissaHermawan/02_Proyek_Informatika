<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/name_wrap"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="1"
            android:text="Customer 1"
            android:textColor="@color/dark_blue"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/default_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/customer_name"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dark_blue_btn"
            android:text="Default"
            android:textColor="@color/yellow"
            android:textSize="10sp"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/customer_contact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_wrap"
        android:text="0812392813"
        android:textSize="15sp"
        android:textColor="@color/dark_blue"
        android:minLines="1"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/customer_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_contact"
        android:text="Jalan alamat di Indonesia"
        android:textSize="15sp"
        android:textColor="@color/dark_blue"
        android:minLines="1"
        android:maxLines="2"/>

    <ImageView
        android:id="@+id/trash_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/trash"/>
    
    <ImageView
        android:id="@+id/edit_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/trash_btn"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/edit"/>
</RelativeLayout>